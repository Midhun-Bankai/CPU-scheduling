#include <stdio.h>

struct Process {
    int id, at, bt, ct, tat, wt;
};

int main() {
    int n, i, j;
    printf("Enter number of processes: ");
    scanf("%d", &n);

    struct Process p[n];


    for (i = 0; i < n; i++) {
        p[i].id = i + 1;
        printf("Enter Arrival Time & Burst Time of P%d: ", i + 1);
        scanf("%d %d", &p[i].at, &p[i].bt);
    }


    for (i = 0; i < n - 1; i++) {
        for (j = i + 1; j < n; j++) {
            if (p[i].at > p[j].at) {
                struct Process temp = p[i];
                p[i] = p[j];
                p[j] = temp;
            }
        }
    }


    int time = 0;
    for (i = 0; i < n; i++) {
        if (time < p[i].at)
            time = p[i].at;
        time += p[i].bt;
        p[i].ct = time;
        p[i].tat = p[i].ct - p[i].at;
        p[i].wt = p[i].tat - p[i].bt;
    }


    printf("\nPID\tAT\tBT\tCT\tTAT\tWT\n");
    for (i = 0; i < n; i++) {
        printf("P%d\t%d\t%d\t%d\t%d\t%d\n",
               p[i].id, p[i].at, p[i].bt,
               p[i].ct, p[i].tat, p[i].wt);
    }


    printf("\nGantt Chart:\n");
    for (i = 0; i < n; i++) {
        printf("| P%d ", p[i].id);
    }
    printf("|\n0");
    for (i = 0; i < n; i++) {
        printf("\t%d", p[i].ct);
    }
    printf("\n");

    return 0;
}
